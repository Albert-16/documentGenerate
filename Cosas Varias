
// Tabla de firmas
Table tablaFirmas = section.AddTable();
tablaFirmas.Borders.Visible = false;
tablaFirmas.AddColumn(Unit.FromCentimeter(7)); // Columna Banco
tablaFirmas.AddColumn(Unit.FromCentimeter(7)); // Columna Cliente

Row filaFirmas = tablaFirmas.AddRow();
filaFirmas.TopPadding = Unit.FromCentimeter(1.5); // Espacio antes de la l√≠nea

// Celda Banco
Paragraph banco = filaFirmas.Cells[0].AddParagraph();
banco.Format.Alignment = ParagraphAlignment.Center;

// Si hay firma imagen
if (!string.IsNullOrEmpty(rutaFirmaBanco) && File.Exists(rutaFirmaBanco))
{
    var img = filaFirmas.Cells[0].AddImage(rutaFirmaBanco);
    img.LockAspectRatio = true;
    img.Width = Unit.FromCentimeter(3);
    filaFirmas.Cells[0].AddParagraph().AddLineBreak();
}

filaFirmas.Cells[0].AddParagraph("____________________________").Format.Alignment = ParagraphAlignment.Center;
filaFirmas.Cells[0].AddParagraph("El Banco").Format.Alignment = ParagraphAlignment.Center;

// Celda Cliente
Paragraph cliente = filaFirmas.Cells[1].AddParagraph();
cliente.Format.Alignment = ParagraphAlignment.Center;
filaFirmas.Cells[1].AddParagraph("Aceptado Digitalmente").Format.Alignment = ParagraphAlignment.Center;
filaFirmas.Cells[1].AddParagraph("____________________________").Format.Alignment = ParagraphAlignment.Center;
filaFirmas.Cells[1].AddParagraph("El Cliente").Format.Alignment = ParagraphAlignment.Center;
