using System.Data;
using Dapper;

// Supongamos que tienes una lista de resultados con el ID y el estado final.
var resultados = new List<(string IdDocumento, int Estado)>
{
    ("doc1", 0),
    ("doc2", 91),
    // ... otros registros
};

// Construyes la consulta SQL con CASE WHEN
string sql = @"
UPDATE EVERTECDTA.GCTDC09L1
   SET GCTDC09014 = CASE GCTDC09001
";

foreach (var resultado in resultados)
{
    sql += $"    WHEN '{resultado.IdDocumento}' THEN {resultado.Estado}\n";
}

sql += @"
   END
 WHERE GCTDC09001 IN @Ids";

var ids = resultados.Select(r => r.IdDocumento).ToArray();

// Luego ejecutas la consulta una sola vez
using (var connection = new OleDbConnection("tu_cadena_de_conexion"))
{
    connection.Open();
    connection.Execute(sql, new { Ids = ids });
}
