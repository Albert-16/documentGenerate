private void AgregarBloqueFirmas(Section sec, string cif, DateTime fechaHora, string etiquetaBanco, string firmaClienteTextoArriba, string etiquetaCliente, string rutaImagenFirma = null, double anchoFirmaCm = 2.5)
{
    var tabla = sec.AddTable();
    tabla.Borders.Visible = false;
    tabla.AddColumn(Unit.FromCentimeter(8)); // Columna banco
    tabla.AddColumn(Unit.FromCentimeter(8)); // Columna cliente

    var filaInfo = tabla.AddRow();
    filaInfo.Format.Alignment = ParagraphAlignment.Right;
    filaInfo.Cells[0].AddParagraph(""); // vacío en banco
    filaInfo.Cells[1].AddParagraph($"N° de CIF: {cif}");
    filaInfo.Cells[1].AddParagraph($"Fecha y hora: {fechaHora:dd/MM/yyyy HH:mm}");

    var filaFirma = tabla.AddRow();
    filaFirma.VerticalAlignment = VerticalAlignment.Center;

    // Columna Banco
    var pBancoLinea = filaFirma.Cells[0].AddParagraph();
    pBancoLinea.AddLineBreak();
    pBancoLinea.AddText("____________________________");
    pBancoLinea.Format.Alignment = ParagraphAlignment.Center;
    filaFirma.Cells[0].AddParagraph(etiquetaBanco).Format.Alignment = ParagraphAlignment.Center;

    // Columna Cliente
    var pClienteArriba = filaFirma.Cells[1].AddParagraph(firmaClienteTextoArriba);
    pClienteArriba.Format.Alignment = ParagraphAlignment.Center;

    var pClienteLinea = filaFirma.Cells[1].AddParagraph("____________________________");
    pClienteLinea.Format.Alignment = ParagraphAlignment.Center;

    var pClienteAbajo = filaFirma.Cells[1].AddParagraph(etiquetaCliente);
    pClienteAbajo.Format.Alignment = ParagraphAlignment.Center;
}
