private async Task SaveInfoRequest(InfoRequestEventArgs args)
{
    try
    {
        // Crear el JSON con la informaci√≥n
        var infoRequestJson = System.Text.Json.JsonSerializer.Serialize(new
        {
            RequestedBy = args.RequestedBy,
            RequestedTo = args.RequestedTo,
            RequestedAt = args.RequestedAt
        });

        var requestUpdateInput = new UpdateRequestInput
        {
            Request_id = Request.Base_id,
            Request_state_description = infoRequestJson
        };

        var result = await _manageAdmin.UpdateRequestPartial.ExecuteAsync(input: requestUpdateInput);
        var data = result.Data.UpdateRequestPartialHelper;
        
        // Actualizar localmente
        Request.Request_state_description = infoRequestJson;
    }
    catch (Exception ex)
    {
        Console.WriteLine(ex.Message);
    }
}
