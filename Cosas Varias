using DocumentFormat.OpenXml.Packaging;
using OpenXmlPowerTools;
using System.Xml.Linq;
using System.IO;

public static class DocxToHtmlHelper
{
    public static string ConvertDocxToHtml(string inputDocxPath)
    {
        using (WordprocessingDocument wDoc = WordprocessingDocument.Open(inputDocxPath, false))
        {
            var settings = new HtmlConverterSettings()
            {
                PageTitle = Path.GetFileNameWithoutExtension(inputDocxPath)
            };

            XElement html = HtmlConverter.ConvertToHtml(wDoc, settings);
            return html.ToString(SaveOptions.DisableFormatting);
        }
    }
}
