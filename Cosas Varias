public static class PdfFormularioHelper
{
    public static void AgregarBloque2x2(Section section, List<(string Etiqueta, string Valor)> campos)
    {
        var table = section.AddTable();
        table.Format.Font.Name = "Times New Roman";
        table.Format.Font.Size = 9;

        // 4 columnas (Etiqueta - Valor - Etiqueta - Valor)
        table.AddColumn("3cm");
        table.AddColumn("5cm");
        table.AddColumn("3cm");
        table.AddColumn("5cm");

        for (int i = 0; i < campos.Count; i += 2)
        {
            var row = table.AddRow();

            // Primer campo
            row.Cells[0].AddParagraph(campos[i].Etiqueta).Format.Bold = true;
            row.Cells[1].AddParagraph(campos[i].Valor ?? string.Empty);

            // Segundo campo (si existe)
            if (i + 1 < campos.Count)
            {
                row.Cells[2].AddParagraph(campos[i + 1].Etiqueta).Format.Bold = true;
                row.Cells[3].AddParagraph(campos[i + 1].Valor ?? string.Empty);
            }
        }

        // LÃ­nea separadora al final del bloque
        var line = section.AddParagraph();
        line.Format.SpaceBefore = 3;
        line.Format.SpaceAfter = 3;
        line.AddFormattedText(new string('_', 120));
    }
}
